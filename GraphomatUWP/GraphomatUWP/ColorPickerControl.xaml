    d:DesignHeight="300"
    d:DesignWidth="400"
    SizeChanged="Control_SizeChanged">

    <Grid>
        <canvas:CanvasControl x:Name="ccColors" Draw="DrawColors" Height="512"/>
    </Grid>
</UserControl>
