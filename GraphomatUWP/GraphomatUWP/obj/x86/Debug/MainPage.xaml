<Page x:ConnectionId='1'
    x:Class="GraphomatUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphomatUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:g="using:GraphomatDrawingLibUwp"
    mc:Ignorable="d"
                        >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <g:DrawControl x:ConnectionId='2' SelectedGraphIndex="{Binding SelectedGraphIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                       ValueSize="{Binding ValueSize,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                       MiddleOfView="{Binding MiddleOfView,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                       Children="{Binding Graphs}"                                         
                                                                        />
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='3' Label="Equations" Icon="List"                             />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

