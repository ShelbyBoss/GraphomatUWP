<UserControl
    x:Class="GraphomatDrawingLibUwp.ZoomButtonsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphomatDrawingLibUwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d"
    d:DesignHeight="100" d:DesignWidth="100" HorizontalAlignment="Right" VerticalAlignment="Top">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <c:CanvasControl x:ConnectionId='1' Grid.Column="1" Grid.Row="0" Margin="5" ClearColor="LightGray"                         
                                                                                                      
                                                                                                                         />
        <c:CanvasControl x:ConnectionId='2' Grid.Column="1" Grid.Row="2" Margin="5" ClearColor="LightGray"                         
                                                                                                      
                                                                                                                          />
        <c:CanvasControl x:ConnectionId='3' Grid.Column="2" Grid.Row="1" Margin="5" ClearColor="LightGray"                         
                                                                                                     
                                                                                                                         />
        <c:CanvasControl x:ConnectionId='4' Grid.Column="0" Grid.Row="1" Margin="5" ClearColor="LightGray"                          
                                                                                                     
                                                                                                                          />
        <c:CanvasControl x:ConnectionId='5' Grid.Column="2" Grid.Row="0" Margin="5" ClearColor="LightGray"                         
                                                                                                     
                                                                                                                         />
        <c:CanvasControl x:ConnectionId='6' Grid.Column="0" Grid.Row="2" Margin="5" ClearColor="LightGray"                          
                                                                                                     
                                                                                                                          />
    </Grid>
</UserControl>

